mixin comment(date, name, content, reply)
  if (reply)
    .comments-item.comments-item--reply
      p.text.manrope.manrope-text2.comments-item__date= date
      p.neue.neue-headline3.m2headline4.comments-item__name= name
      p.manrope.manrope-text2.m2comment.comments-item__content= content
      a(href="#").neue.neue-link.m2comment.comments-item__reply
        | Reply
  else
    .comments__group
      .comments-item
        p.text.manrope.manrope-text2.comments-item__date= date
        p.neue.neue-headline3.m2headline4.comments-item__name= name
        p.manrope.manrope-text2.m2comment.comments-item__content= content
        a(href="#").neue.neue-link.m2comment.comments-item__reply
          | Reply

